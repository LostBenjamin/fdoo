        <record id="wizard_${name}" model="ir.ui.view">
          <field name="name">${modul}.wizard_${name}</field>
          <field name="model">${model}</field>
          <field name="arch" type="xml">
            <form string="Transport Wizard" version="7.0">
              <group>
                <group>
