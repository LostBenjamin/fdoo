    |
    <record model="ir.module.category" id="module_category_${category}">
      <field name="name">${name}</field>
      <field name="visible" eval="0" />
    </record>

- name: 'o_data'
  description: 'OpenERP: Data'
  pattern:
    |
    <openerp>
