<openerp>
	<data>		
		<record id="search_service_category" model="ir.ui.view">
            <field name="name">posix_net.service_category</field>
            <field name="model">posix_net.service_category</field>
            <field name="arch" type="xml">
                <search string="Search Service Category">
                	<field name="name" filter_domain="[('name','ilike',self)]" string="Service Category"/>
               </search>
            </field>
		</record>
		
		<record id="form_posix_net_service_category" model="ir.ui.view">
            <field name="name">posix_net.form_posix_net_service_category</field>
            <field name="model">posix_net.service_category</field>
            <field name="arch" type="xml">
                <form string="Service Category" version="7.0">
                	<sheet>
	                	<group>
		                	<field name="name" />
		                	<field name="parent_id" />
		                </group>
	                </sheet>
                </form>
            </field>
        </record>

        <record id="tree_posix_net_service_category" model="ir.ui.view">
            <field name="name">posix_net.tree_posix_net_service_category</field>
            <field name="model">posix_net.service_category</field>
            <field name="arch" type="xml">
                <tree string="Service Category">
					<field name="name" />
	                <field name="parent_id" />
                </tree>
            </field>
        </record>
        
        <record id="action_posix_net_service_category" model="ir.actions.act_window">
            <field name="name">Service Category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">posix_net.service_category</field>            
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
				
        <menuitem id="menu_posix_net_service_category" name="Service Category" parent="menu_network_config_network_configuration_service" sequence="2"
        		  action="action_posix_net_service_category"/>		
	</data>
</openerp>