<openerp>
	<data>
		
		<record id="search_posix_net_network" model="ir.ui.view">
            <field name="name">posix_net.network</field>
            <field name="model">posix_net.network</field>
            <field name="arch" type="xml">
                <search string="Search Network">
                	<field name="name" filter_domain="[('name','ilike',self)]" string="Network" />
                	<filter string="No endpoint" name="endpoint" icon="terp-network" domain="[('endpoint', '=', False)]"/>
               </search>
            </field>
		</record>
		
		<record id="form_posix_net_network" model="ir.ui.view">
			<field name="name">posix_net.form_posix_net_network</field>
			<field name="model">posix_net.network</field>
			<field name="arch" type="xml">
				<form string="Network" version="7.0">
					<sheet>
						<group>
							<group>
								<separator string="Network" />
								<newline></newline>
								<field name="name"/>
								<field name="parent_id"/>
								<field name="child_ids" invisible="1" />
								<field name="hosts"/>
								<field name="is_template"/>		
								<field name="endpoint" invisible="context.get('default_endpoint')" />
								<field name="leaf" readonly="1"/>
							</group>
							<group>
							 	<separator string="Visibility" />
							 	<newline></newline>
								<field name="private" on_change="on_change_visibility(0, 1)" attrs="{'readonly': [('endpoint','=',True)] }"/>
								<field name="public" on_change="on_change_visibility(1, 0)" attrs="{'readonly': [('endpoint','=',True)] }"/>
								<field name="published" attrs="{'readonly': [('endpoint','=',True)] }"/>
								<field name="protected" attrs="{'readonly': [('endpoint','=',True)] }"/>
							</group>
						</group>
						<group>
							<separator string="Protocols" />
							<newline></newline>
							<label for="ipv4" string="IPv4"/>
							<div class="ip_format">
								<field name="ipv4" style="width: 3%%"/>
								<field name="ipv4_address_id" attrs="{'readonly': [('ipv4','!=',True)] }" style="width: 60%%"/>
							</div>
							<label for="ipv6" string="IPv6"/>
							<div class="ip_format">
								<field name="ipv6" style="width: 3%%"/>
								<field name="ipv6_address_id" attrs="{'readonly': [('ipv6','!=',True)] }" style="width: 60%%"/>
							</div>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="tree_posix_net_network" model="ir.ui.view">
			<field name="name">posix_net.tree_posix_net_network</field>
			<field name="model">posix_net.network</field>
			<field name="arch" type="xml">
				<tree string="Network">
					<field name="complete_name" />
					<field name="endpoint"/>					
					<field name="public" />
					<field name="protected"/>
					<field name="private"/>
					<field name="hosts"/>
				</tree>
			</field>
		</record>

		<record id="action_posix_net_network" model="ir.actions.act_window">
			<field name="name">Network</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">posix_net.network</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="search_posix_net_network" />
            <field name="context">{'search_default_endpoint' : 1 }</field>
		</record>

		<menuitem id="menu_posix_net_network" name="Network"
			parent="menu_network_config_network" sequence="3"
			action="action_posix_net_network" />
	</data>
</openerp>