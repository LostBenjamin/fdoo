<openerp>
	<data>
		<record id="search_net_ipv4_address" model="ir.ui.view">
            <field name="name">posix_net.net_ipv4_address</field>
            <field name="model">posix_net.net_ipv4_address</field>
            <field name="arch" type="xml">
                <search string="Search Address">
                	<field name="name" filter_domain="['|', ('name','ilike',self), ('ip', 'ilike', self)]" string="IPv4 Address"/>
                    <group expand="0" string="Group By...">
                        <filter string="Network" icon="terp-network" domain="[]" context="{'group_by':'parent_id'}"/>
                    </group>
               </search>
            </field>
		</record>
	
		<record id="form_posix_net_net_ipv4_address" model="ir.ui.view">
			<field name="name">posix_net.form_posix_net_net_ipv4_address</field>
			<field name="model">posix_net.net_ipv4_address</field>
			<field name="arch" type="xml">
				<form string="IPv4" version="7.0">
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="parent_id"/>
							</group>
							<group>
								<label for="ip" string="IP"/>
								<div class="ip_format">
									<field name="ip" placeholder="e.g. 192.168.1.1" style="width: 60%%"/>
									<field name="mask" style="width: 15%%"/>
								</div>
							</group>
						</group>
						<field name="child_ids">
							<tree string="Childs" editable="bottom">								 
								 <field name="ip"/>								 
								 <field name="name"/>
							</tree>
						</field>
					</sheet>
				</form>
			</field>
		</record>

		<record id="tree_posix_net_net_ipv4_address" model="ir.ui.view">
			<field name="name">posix_net.tree_posix_net_net_ipv4_address</field>
			<field name="model">posix_net.net_ipv4_address</field>
			<field name="arch" type="xml">
				<tree string="IPv4">					
					<field name="ip"/>
					<field name="name"/>
					<field name="parent_id" string="Parent"/>
				</tree>
			</field>
		</record>

		<record id="action_posix_net_net_ipv4_address" model="ir.actions.act_window">
			<field name="name">IPv4</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">posix_net.net_ipv4_address</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_posix_net_net_ipv4_address" name="IPv4"
			parent="menu_network_config_network" sequence="4"
			action="action_posix_net_net_ipv4_address" />
	</data>
</openerp>