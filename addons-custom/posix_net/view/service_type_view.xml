<openerp>
	<data>
		<record id="search_service_type" model="ir.ui.view">
            <field name="name">posix_net.service_type</field>
            <field name="model">posix_net.service_type</field>
            <field name="arch" type="xml">
                <search string="Search Service Type">
                	<field name="name" filter_domain="[('name','ilike',self)]" string="Service Type"/>
               </search>
            </field>
		</record>
		
		<record id="form_posix_net_service_type" model="ir.ui.view">
			<field name="name">posix_net.form_posix_net_service_type</field>
			<field name="model">posix_net.service_type</field>
			<field name="arch" type="xml">
				<form string="Service Type" version="7.0">
					<sheet>
						<group>
							<field name="name" />
							<field name="port" />
						</group>
						<label for="category_ids" string="Category"></label>
						<newline></newline>
						<field name="category_ids" colspan="4" nolabel="1" />
					</sheet>
				</form>
			</field>
		</record>

		<record id="tree_posix_net_service_type" model="ir.ui.view">
			<field name="name">posix_net.tree_posix_net_service_type</field>
			<field name="model">posix_net.service_type</field>
			<field name="arch" type="xml">
				<tree string="Service Type">
					<field name="name" />
					<field name="port" />
				</tree>
			</field>
		</record>

		<record id="action_posix_net_service_type" model="ir.actions.act_window">
			<field name="name">Service Type</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">posix_net.service_type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_posix_net_service_type" name="Service Type"
			parent="menu_network_config_network_configuration_service" sequence="1"
			action="action_posix_net_service_type" />
	</data>
</openerp>