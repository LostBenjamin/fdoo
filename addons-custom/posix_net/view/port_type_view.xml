<openerp>
	<data>
		<record id="search_port_type" model="ir.ui.view">
            <field name="name">posix_net.port_type</field>
            <field name="model">posix_net.port_type</field>
            <field name="arch" type="xml">
                <search string="Search Port Type">
                	<field name="name" filter_domain="[('name','ilike',self)]" string="Port Type"/>
               </search>
            </field>
		</record>
		
		<record id="form_posix_net_port_type" model="ir.ui.view">
			<field name="name">posix_net.form_posix_net_port_type</field>
			<field name="model">posix_net.port_type</field>
			<field name="arch" type="xml">
				<form string="Port Type" version="7.0">
					<sheet>
						<group>
							<group>
								<separator string="General"/>
								<newline></newline>
								<field name="name" />
								<field name="code" />
								<field name="wlan_max_txpower" />
								<field name="wlan_max_bandwidth" />
								<field name="tunnel_type"/>
								<field name="key_len" />
							</group>
							<group>
								<separator string="Properties" col="2" colspan="2" />
								<newline></newline>
								<field name="ipv4_available" />
								<field name="ipv6_available" />
								<field name="wlan_available"/>
								<field name="tunnel_available"/>
								<field name="wlan_air_max_available" />
								<field name="wlan_channel_shift_available" />
							</group>
							<field name="port_ids" invisible="1" />
						</group>
						<label for="category_ids" string="Categories"/>
						<field name="category_ids" />
						<newline></newline>
						<label for="allowed_channel_ids" string="Allowed Channels"/>
						<field name="allowed_channel_ids" />
					</sheet>
				</form>
			</field>
		</record>

		<record id="tree_posix_net_port_type" model="ir.ui.view">
			<field name="name">posix_net.tree_posix_net_port_type</field>
			<field name="model">posix_net.port_type</field>
			<field name="arch" type="xml">
				<tree string="Port Type">
					<field name="name" />
					<field name="code" />
					<field name="category_names"/>
				</tree>
			</field>
		</record>

		<record id="action_posix_net_port_type" model="ir.actions.act_window">
			<field name="name">Port Type</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">posix_net.port_type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_posix_net_port_type" name="Port Type"
			parent="menu_network_config_network_network" sequence="12"
			action="action_posix_net_port_type" />
	</data>
</openerp>