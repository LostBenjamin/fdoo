<openerp>
	<data>
		<record id="wizard_link" model="ir.ui.view">
			<field name="name">posix_net.wizard_link</field>
			<field name="model">posix_net.wizard_link</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Link Wizard">
					<group col="4" colspan="4">
						<field name="wizard_id" colspan="4" />
						<field name="port_id" colspan="4" />
					</group>
					<group col="6" colspan="4">
						<label string="" colspan="4" />
						<button special="cancel" string="Cancel" icon="gtk-cancel" />
						<button name="create" string="Create" type="object" icon="gtk-go-forward" />
					</group>
				</form>
			</field>
		</record>
		<record id="action_link_wizard" model="ir.actions.act_window">
			<field name="name">Link Wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">posix_net.wizard_link</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_link" />
			<field name="multi">True</field>
			<field name="target">new</field>
		</record>
		<record id="irconfig_link_wizard" model="ir.values">
			<field name="model_id" ref="posix_net.model_posix_net_wizard_link" />
			<field name="model">posix_net.wizard_link</field>
			<field name="object" eval="1" />
			<field name="name">Link Wizard</field>
			<field name="key2">client_action_multi</field>
			<field name="value"
				eval="'ir.actions.act_window,' + str(ref('action_link_wizard'))" />
			<field name="key">action</field>
		</record>
	</data>
</openerp>