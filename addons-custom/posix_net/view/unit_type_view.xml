<openerp>
	<data>
		<record id="search_unit_type" model="ir.ui.view">
            <field name="name">posix_net.unit_type</field>
            <field name="model">posix_net.unit_type</field>
            <field name="arch" type="xml">
                <search string="Search Unit Type">
                	<field name="name" filter_domain="[('name','ilike',self)]" string="Unit Type"/>
               </search>
            </field>
		</record>
		
		<record id="form_posix_net_unit_type" model="ir.ui.view">
			<field name="name">posix_net.form_posix_net_unit_type</field>
			<field name="model">posix_net.unit_type</field>
			<field name="arch" type="xml">
				<form string="Unit Type" version="7.0">
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" />
							<h1>
								<field name="name" />
							</h1>
							<label for="template_unit_id" class="oe_edit_only" />
							<h2>
								<field name="template_unit_id" />
							</h2>
						</div>
						<group>
							<group>
								<field name="code" />
								<field name="category_id" />
							</group>
							<group>
								<field name="firmware_id" />
								<field name="area" />
							</group>
						</group>
						<label for="description"/>
						<field name="description" />
					</sheet>
				</form>
			</field>
		</record>

		<record id="tree_posix_net_unit_type" model="ir.ui.view">
			<field name="name">posix_net.tree_posix_net_unit_type</field>
			<field name="model">posix_net.unit_type</field>
			<field name="arch" type="xml">
				<tree string="Unit Type">
					<field name="name" />
					<field name="code" />
					<field name="description" />
				</tree>
			</field>
		</record>

		<record id="action_posix_net_unit_type" model="ir.actions.act_window">
			<field name="name">Unit Type</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">posix_net.unit_type</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_posix_net_unit_type" name="Unit Type"
			parent="menu_network_config_network_network" sequence="10"
			action="action_posix_net_unit_type" />
	</data>
</openerp>