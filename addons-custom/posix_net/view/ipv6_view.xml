<openerp>
	<data>
	
		<record id="search_net_ipv6_address" model="ir.ui.view">
            <field name="name">posix_net.net_ipv6_address</field>
            <field name="model">posix_net.net_ipv6_address</field>
            <field name="arch" type="xml">
                <search string="Search Address">
                	<field name="name" filter_domain="[('name','ilike',self)]" string="IPv6 Address"/>
                    <group expand="0" string="Group By...">
                        <filter string="Network" icon="terp-network" domain="[]" context="{'group_by':'parent_id'}"/>
                    </group>
               </search>
            </field>
		</record>
	
		<record id="form_posix_net_net_ipv6_address" model="ir.ui.view">
			<field name="name">posix_net.form_posix_net_net_ipv6_address</field>
			<field name="model">posix_net.net_ipv6_address</field>
			<field name="arch" type="xml">
				<form string="IPv6" version="7.0">
					<sheet>
						<group>
							<group>
								<field name="name" />
								<field name="parent_id"/>
							</group>
							<group>
								<label for="ip" string="IP"/>
								<div class="ip_format">
									<field name="ip" placeholder="e.g. 2001:db8:0:8d3:0:8a2e:70:7344" style="width: 100%%"/>
									<field name="mask" style="width: 15%%"/>
								</div>
							</group>
						</group>
						<label string="Childs" for="child_ids"/>
						<field name="child_ids" />
					</sheet>
				</form>
			</field>
		</record>

		<record id="tree_posix_net_net_ipv6_address" model="ir.ui.view">
			<field name="name">posix_net.tree_posix_net_net_ipv6_address</field>
			<field name="model">posix_net.net_ipv6_address</field>
			<field name="arch" type="xml">
				<tree string="IPv6">					
					<field name="ip"/>
					<field name="name"/>
					<field name="parent_id" />
				</tree>
			</field>
		</record>

		<record id="action_posix_net_net_ipv6_address" model="ir.actions.act_window">
			<field name="name">IPv6</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">posix_net.net_ipv6_address</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_posix_net_net_ipv6_address" name="IPv6"
			parent="menu_network_config_network" sequence="5"
			action="action_posix_net_net_ipv6_address" />
	</data>
</openerp>