<openerp>
	<data>		
		<record id="search_posix_net_service" model="ir.ui.view">
            <field name="name">posix_net.posix_net_service</field>
            <field name="model">posix_net.service</field>
            <field name="arch" type="xml">
                <search string="Search Service">
                	<field name="name" filter_domain="[('name','ilike',self)]" />
                   <filter string="Inactive" icon="terp-accessories-archiver" domain="[('enabled','=',False)]"/>
               </search>
            </field>
		</record>
		
		<record id="form_posix_net_service" model="ir.ui.view">
            <field name="name">posix_net.form_posix_net_service</field>
            <field name="model">posix_net.service</field>
            <field name="arch" type="xml">
                <form string="Service" version="7.0">
                	<sheet>
                		<group>
                			<group>
			                	<field name="name" />
					            <field name="enabled"/>
					        </group>
					        <group>
					            <field name="unit_id"/>
					            <field name="type_id"/>
					        </group>
				        </group>
		               	<notebook colspan="4">	             
		               		<page string="Interfaces" >
	                			<field name="iface_ids"  nolabel="1"  domain="[('unit_id','=',unit_id)]"/>
		              		</page>
		              	</notebook>
		        	</sheet>
                </form>
            </field>
        </record>

        <record id="tree_posix_net_service" model="ir.ui.view">
            <field name="name">posix_net.tree_posix_net_service</field>
            <field name="model">posix_net.service</field>
            <field name="arch" type="xml">
                <tree string="Service">
                	<field name="complete_name" />
                	<field name="unit_id"/>                	
                	<field name="type_id"/>
                </tree>
            </field>
        </record>
        
        <record id="action_posix_net_service" model="ir.actions.act_window">
            <field name="name">Service</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">posix_net.service</field>            
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
				
        <menuitem id="menu_posix_net_service" name="Service" parent="menu_network_config_network_service" sequence="1"
        		  action="action_posix_net_service"/>		
	</data>
</openerp>