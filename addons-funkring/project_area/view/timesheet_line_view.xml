<openerp>
	<data>
		<record id="form_timesheet_line" model="ir.ui.view">
			<field name="name">Hour Overview</field>
			<field name="model">hr.analytic.timesheet</field>
			<field name="type">form</field>
			<field name="priority">99</field>
			<field name="arch" type="xml">
				<form string="Hour Overview">
					<field name="date" />
					<field name="name" />
					<field name="unit_amount" />
					<field name="to_invoice" />
				</form>
			</field>
		</record>
		
		<record id="tree_timesheet_line" model="ir.ui.view">
			<field name="name">Hour Overview</field>
			<field name="model">hr.analytic.timesheet</field>
			<field name="type">tree</field>
			<field name="priority">99</field>
			<field name="arch" type="xml">
				<tree string="Hour Overview">
					<field name="date" />
					
					<field name="name" />
					<field name="unit_amount" sum="Total Amount" />
					<field name="to_invoice" />
				</tree>
			</field>
		</record>
		
		<record id="search_timesheet_line" model="ir.ui.view">
			<field name="name">Hour Overview</field>
			<field name="model">hr.analytic.timesheet</field>
			<field name="type">search</field>
			<field name="priority">99</field>
			<field name="arch" type="xml">
				<search string="Hour Overview">
					<group col="4" colspan="4">
						<field name="date" />
						<field name="name" />
					</group>
				</search>
			</field>
		</record>

		<record id="action_timesheet_line" model="ir.actions.act_window">
			<field name="name">Hour Overview</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">hr.analytic.timesheet</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="tree_timesheet_line" />
			<field name="search_view_id" ref="search_timesheet_line" />
		</record>

		<record id="action_timesheet_line_tree" model="ir.actions.act_window.view">
			<field name="sequence" eval="1" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="tree_timesheet_line" />
			<field name="act_window_id" ref="action_timesheet_line" />
		</record>

		<record id="action_timesheet_line_form" model="ir.actions.act_window.view">
			<field name="sequence" eval="2" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="form_timesheet_line" />
			<field name="act_window_id" ref="action_timesheet_line" />
		</record>

	</data>
</openerp>