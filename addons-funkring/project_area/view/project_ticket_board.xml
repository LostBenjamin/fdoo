<openerp>
	<data>			
		<record id="ticket_board_project_area" model="ir.ui.view">
			<field name="name">board.project_area</field>
			<field name="model">board.board</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Ticket Board">
					<hpaned>
						<child1>
							<action colspan="4" height="600" width="510"
								name="%(at_project_issue.action_ticket_log_report)d" string="Project/Ticket Journal"
								help="Recent changes on tickets"/>
						</child1>
						<child2>					
							<action colspan="4" height="300"
								name="%(action_view_nondraft_ticket)d" string="Pending Tickets"
								help="Confirmed Tickets are pending and finished. Only from the confirmed Tickets from the customer are processed"/>
							<action colspan="4" height="300"
								name="%(action_view_draft_ticket)d" string="Unconfirmed Tickets"
								help="Unconfirmed Tickets This Tickets are in draft state, working on this Tickets starts if the customer starts it."/>	
							<action colspan="4" height="300"
								name="%(project_long_term.act_project_phase_list)d" string="Project Phase"/>
						</child2> 
					</hpaned>
				</form>
			</field>
		</record>
		
		<record id="open_project_ticket_area" model="ir.actions.act_window">
            <field name="name">Ticket Dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="ticket_board_project_area"/>
            <field name="help">This board shows the history of the tickets and a view more Features.</field>
     	</record>     

	</data>
</openerp>
