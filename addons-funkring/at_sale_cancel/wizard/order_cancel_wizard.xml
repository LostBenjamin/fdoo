<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
  
    <record id="wizard_order_cancel" model="ir.ui.view">
      <field name="name">at_sale_cancel.wizard_order_cancel</field>
      <field name="model">sale.order.cancel.wizard</field>
      <field name="arch" type="xml">
        <form string="Order Cancelling">
          <group>
            <notebook>
                <page string="Links">
                    <div>
                        <field name="link_ids" readonly="1">
                            <tree>
                                <field name="name"/>
                                <field name="ref"/>
                                <field name="type"/>                                
                            </tree>
                        </field>
                    </div>
                </page>
            </notebook>            
          </group>
          <footer>
            <button name="action_cancel" string="Cancel Order"  type="object" class="oe_highlight" />
            or
            <button special="cancel" string="Close" class="oe_link" />
          </footer>
        </form>
      </field>
    </record>
    
  </data>
</openerp>
