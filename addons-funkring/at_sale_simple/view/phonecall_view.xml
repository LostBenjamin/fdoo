<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="phone_call_form_view">
            <field name="name">CRM - Phone Call Form</field>
            <field name="model">crm.phonecall</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="crm.crm_case_phone_form_view" />
            <field name="arch" type="xml">
                <form string="Phone Call" position="replace">
                    <form string="Phone Call">
                        <group colspan="6" col="6">
                            <field name="name" required="1" />
                            <field name="date" required="1" />
                            <field name="duration" widget="float_time"
                                required="1" />
                            <field name="partner_id" invisible="1" />
                            <field name="partner_address_id"
                                domain=""
                                on_change="onchange_partner_address_id(partner_address_id, email_from)" />
                            <field name="opportunity_id"
                                on_change="onchange_opportunity_id(opportunity_id)" />
                            <field name="user_id" />
                            <field name="categ_id" widget="selection"
                                domain="[('object_id.model', '=', 'crm.phonecall')]"
                                string="Type" />
                            <field name="priority" />
                        </group>
                        <separator string="Description"
                            colspan="6" />
                        <field name="description" nolabel="1"
                            colspan="6" />
                        <separator colspan="6" />

                        <group colspan="6" col="6">
                            <label colspan="3" string="" />

                            <button string="Convert to Opportunity"
                                colspan="1"
                                name="%(crm.phonecall2opportunity_act)d"
                                icon="gtk-index" type="action"
                                attrs="{'invisible':[('opportunity_id','!=',False)]}" />

                            <button string="Schedule a Meeting"
                                colspan="1" name="action_make_meeting"
                                icon="gtk-redo" type="object" />
                        </group>
                    </form>
                </form>
            </field>
        </record>
    </data>
</openerp>