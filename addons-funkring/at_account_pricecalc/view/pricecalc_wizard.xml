<openerp>
	<data>		
		<record id="wizard_pricecalc" model="ir.ui.view">
            <field name="name">at_account_pricecalc.wizard_pricecalc</field>
            <field name="model">at_account_pricecalc.pricecalc_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Price Calculation">
                    <field name="description" nolabel="1" colspan="4"/>
                    <field name="purchase_invoice_line_id" invisible="1"/>
                    <field name="sale_invoice_line_id" invisible="1"/>
                    <field name="purchase_price" on_change="on_change_price(purchase_price, marge_percent, sales_price)" 
                    		attrs="{'readonly': [('purchase_invoice_line_id','=',False)] }"/>
                    <newline/>
                    <field name="marge_percent" on_change="on_change_price(purchase_price, marge_percent, sales_price)"/>
                    <newline/>
                    <field name="marge" on_change="on_change_marge(purchase_price, marge, sales_price)"/>
                    <newline/>
                    <field name="sales_price" on_change="on_change_price(purchase_price, False, sales_price)"
                    		attrs="{'readonly': [('sale_invoice_line_id','=',False)] }"/>
                    <group col="6" colspan="4">
	                    <label string="" colspan="4"/>
		                <button special="cancel" string="Cancel" icon="gtk-cancel"/>
						<button name="change_price" string="Ok" type="object" icon="gtk-go-forward"/>	    	            
	                </group>
                </form>
            </field>
        </record>
                      
        <record id="action_pricecalc" model="ir.actions.act_window">
			<field name="name">Price Calculation</field>
			<field name="type">ir.actions.act_window</field>
			<field name="src_model">account.invoice.line</field>
			<field name="res_model">at_account_pricecalc.pricecalc_wizard</field>   
			<field name="view_type">form</field>         
			<field name="view_mode">form</field>                                  
			<field name="view_id" ref="wizard_pricecalc"/>
			<field name="multi">False</field>
			<field name="target">new</field>
		</record>		
		
    </data>
</openerp>