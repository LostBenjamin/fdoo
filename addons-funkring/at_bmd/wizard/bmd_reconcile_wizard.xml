<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record id="wizard_bmd_reconcile" model="ir.ui.view">
      <field name="name">bmd.wizard_bmd_reconcile</field>
      <field name="model">bmd.reconcile.wizard</field>
      <field name="arch" type="xml">
        <form string="Rechnungsausgleich">
          <group>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="journal_id" domain="[('company_id','=',company_id)]"/>
            <field name="csv"/>            
          </group>
          <footer>
            <button name="action_reconcile" string="Ausgleichen"  type="object" class="oe_highlight" />
            or
            <button special="cancel" string="Abbrechen" class="oe_link" />
          </footer>
        </form>
      </field>
    </record>
    
    <record id="action_bmd_reconcile" model="ir.actions.act_window">
      <field name="name">BMD OP Ausgleich</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">bmd.reconcile.wizard</field>
      <field name="view_type">form</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
    </record>

    
    <menuitem id="menu_bmd_reconcile" parent="at_account.menu_account_eximport"
            action="action_bmd_reconcile" sequence="200" />
            
  </data>
</openerp>

