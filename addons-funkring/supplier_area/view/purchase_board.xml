<openerp>
	<data>
	
	    <record id="tree_purchase_line_blocked" model="ir.ui.view">
            <field name="name">supplier.tree_purchase_line_blocked</field>
            <field name="model">purchase.order.line</field>
            <field name="type">tree</field>
            <field name="priority">100</field>            
            <field name="arch" type="xml">
                <tree string="Purchase Order Lines"
                	  colors="red:(date_planned&lt;current_date);red:(severity=='2');orange:(severity=='1');blue:(severity=='0');gray:(priority=='0')">                	
                	<button name="stage_next" string="Next Stage" states="draft,confirmed"  type="object"  icon="gtk-go-forward" attrs="{'invisible':[('state','==','done')]}"/>               	 	
                	<field name="create_date"/>                	
                	<field name="date_planned"  width="135"/>
                	<field name="category_id"/>
                	<field name="partner_id"/>
                	<field name="shop_id"/>
                	<field name="severity" invisible="1"/>                	
                	<field name="level_id"/>   
                    <field name="order_id"/>
                    <field name="sale_order_id"/>            
                    <field name="priority" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <record id="search_purchase_line_blocked" model="ir.ui.view">
            <field name="name">supplier.search_purchase_line_blocked</field>
            <field name="model">purchase.order.line</field>
            <field name="type">search</field>                    
            <field name="arch" type="xml">
                <search string="Search Purchase Order">
                        <group>
                        	<field name="order_id"/>
	                        <field name="sale_order_id"/>	                        
	                        <field name="category_id" widget="selection" operator="child_of"/>
	                        <field name="partner_id"/>
	                        <field name="shop_id"/>
	                        <field name="level_id"/>     
	                        <field name="date_planned"/>
                        </group>
                        <newline/>
                        <group expand="0" string="Group By...">
                        <filter string="Category" icon="terp-stock" domain="[]" context="{'group_by' : 'category_id'}" />
                        <filter string="Date" icon="terp-calendar" domain="[]" context="{'group_by' : 'date_planned'}" />
                        </group>
               </search>
         	</field>
         </record> 
        
	     <record id="action_purchase_line_blocked" model="ir.actions.act_window">
            <field name="name">Purchase Order Lines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.line</field>          
            <field name="view_mode">tree,form</field>                                  
            <field name="search_view_id" ref="search_purchase_line_blocked"/>
            <field name="view_id" ref="tree_purchase_line_blocked"/>                        
            <field name="domain">[('severity','=','2')]</field>
        </record>       
        <record id="action_purchase_line_blocked_tree" model="ir.actions.act_window.view">
         	<field name="sequence" eval="1"/>         	
         	<field name="view_mode">tree</field>
         	<field name="view_id" ref="tree_purchase_line_blocked"/>
         	<field name="act_window_id" ref="action_purchase_line_blocked"/>
         </record>       	
       	<record id="action_purchase_line_blocked_form" model="ir.actions.act_window.view">
         	<field name="sequence" eval="2"/>
         	<field name="view_mode">form</field>
         	<field name="view_id" ref="form_purchase_line2"/>
         	<field name="act_window_id" ref="action_purchase_line_blocked"/>
        </record>
			
		<record id="board_purchase" model="ir.ui.view">
            <field name="name">supplier_area.board_purchase</field>
            <field name="model">board.board</field>            
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="My Board">
                    <hpaned>
                        <child1>
                        <!--
                            <action colspan="4" height="220" name="%(purchase.action_current_purchases)d" string="Current purchases"  width="510"/>
                            <action colspan="4" height="220" name="%(purchase.action_po_per_month_tree)d" string="Purchase order per month"  width="510"/>
                        -->
                        	<action colspan="4" height="220" name="%(purchase.purchase_draft)d" string="Request for Quotations"  width="510"/>
                        	<action colspan="4" height="220" name="%(purchase.purchase_waiting)d" string="Purchase Order Waiting Approval"  width="510"/>
                        </child1>
                        <child2>
                        		<action colspan="4" height="220" name="%(action_purchase_line_blocked)d" string="Blocked Order Lines"/>
                        		
                        <!--
                     	    <action colspan="4" height="220" name="%(purchase.action_purchase_order_monthly_categ_graph)d" string="Monthly Purchase by Category"  />
                            <action colspan="4" height="220" name="%(purchase.action_purchase_by_supplier)d" string="Purchase by supplier"  />
                            <action colspan="4" height="220" name="%(purchase.action_total_price_by_product_by_state)d" string="Total price by product by state"  />
                            <action colspan="4" height="220" name="%(purchase.action_qty_per_product)d" string="Total Quantity per product"  />
                        -->

                        </child2>
                    </hpaned>
                </form>
            </field>
        </record>
	
	
		<record id="purchase.open_board_purchase" model="ir.actions.act_window">
            <field name="name">Purchase Dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="board_purchase"/>
        </record>
        
	</data>
</openerp>