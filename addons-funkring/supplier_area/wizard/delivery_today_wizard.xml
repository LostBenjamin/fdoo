<openerp>
	<data>
		<record id="wizard_delivery_today" model="ir.ui.view">
			<field name="name">Delivery Today</field>
			<field name="model">supplier_area.delivery_today_wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Delivery Date">
				    <field name="shop_id" widget="selection"/>
					<field name="level_id"/>			
					<field name="date_from" />	
					<field name="date_to" />
					<separator colspan="4" col="4" />
					<group col="6" colspan="4">
						<label string="" colspan="4" />
						<button special="cancel" string="Cancel" icon="gtk-cancel" />
						<button name="do_print" string="Print" type="object" icon="gtk-go-forward" />
					</group>
				</form>
			</field>
		</record>
		
		<record id="action_delivery_today" model="ir.actions.act_window">
			<field name="name">Delivery Date</field>
			<field name="type">ir.actions.act_window</field>
			<field name="src_model">purchase.order.line</field>
			<field name="res_model">supplier_area.delivery_today_wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_delivery_today" />
			<field name="multi">True</field>
			<field name="target">new</field>
		</record>

		<record id="irconfig_delivery_today" model="ir.values">
		    <field name="model_id" ref="purchase.model_purchase_order_line" />
		    <field name="model">purchase.order.line</field>
		    <field name="object" eval="1" />
		    <field name="name">Delivery Overview</field>
		    <field name="key2">client_action_multi</field>
		    <field name="value" eval="'ir.actions.act_window,' + str(ref('action_delivery_today'))" />
		    <field name="key">action</field>
		</record>
	</data>
</openerp>