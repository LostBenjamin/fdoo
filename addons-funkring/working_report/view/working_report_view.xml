<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record id="form_working_report" model="ir.ui.view">
      <field name="name">working_report.form_working_report</field>
      <field name="model">working.report</field>
      <field name="arch" type="xml">
        <form string="Working Report" version="7.0">
            <group>
                <group>
                    <field name="name"/>
                </group>
                <group>
                    <field name="description"/>
                </group>
                <div colspan="4">
                <field name="analytic_line_ids" context="{'to_invoice':True}"/>
                </div>
            </group>          
        </form>
      </field>
    </record>

    <record id="tree_working_report" model="ir.ui.view">
      <field name="name">working_report.tree_working_report</field>
      <field name="model">working.report</field>      
      <field name="arch" type="xml">      
        <tree string="Working Reports">
            <field name="name"/>
            <field name="description"/>
        </tree>
      </field>
    </record>

    <record id="search_working_report" model="ir.ui.view">
      <field name="name">working_report.search_working_report</field>
      <field name="model">working.report</field>      
      <field name="arch" type="xml">
        <search string="Search Working Report">
            <field name="name"/>
            <field name="description"/>
        </search>
      </field>
    </record>

    <record id="action_working_report" model="ir.actions.act_window">
      <field name="name">Working Report</field>
      <field name="res_model">working.report</field>
      <field name="view_type">form</field>      
      <field name="view_mode">tree,form</field>   
    </record>

    <menuitem id="menu_working_report" name="Working Reports" parent="base.menu_invoiced"
      sequence="20"
      action="action_working_report"/>
  </data>
</openerp>
