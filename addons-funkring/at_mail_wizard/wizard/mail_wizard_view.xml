<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_mail_wizard" model="ir.ui.view">
            <field name="name">Mail Wizard</field>
            <field name="model">at_mail_wizard.mail_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Mail Wizard">
                    <group colspan="4" col="4">
                        <field name="to" />
                        <newline />
                        <field name="subject" />
                        <field name="report_id" invisible="1"/>
                        <field name="report_name" invisible="1"/>
                        <field name="smtp_server_id" invisible="1"/>
                    </group>
                    <separator string="Message: " colspan="4" />
                    <field name="message" widget="text_tag"
                        nolabel="1" colspan="4" />
                    <group col="6" colspan="4">
                        <label string="" colspan="4" />
                        <button special="cancel" string="Cancel"
                            icon="gtk-cancel" />
                        <button name="action_send_mail" string="Send"
                            type="object" icon="gtk-go-forward" />
                    </group>
                </form>
            </field>
        </record>
    </data>
</openerp>