<openerp>
	<data>		
		<record id="form_sale_category" model="ir.ui.view">
            <field name="name">Sale category</field>
            <field name="model">sale.category</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Sale category">
                	<field name="name" />
                    <separator colspan="4"></separator>
                    <field name="report_ids" colspan="4" nolabel="1">
                    	<tree string="Reports" editable="bottom">
                    		<field name="source_report_id"/>
                    		<field name="dest_report_id"/>
                    		<field name="name" />
                    	</tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="tree_sale_category" model="ir.ui.view">
            <field name="name">Sale category</field>
            <field name="model">sale.category</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Sale category">
                	<field name="name"/>
                </tree>
            </field>
        </record>
        
        <record id="action_sale_category" model="ir.actions.act_window">
            <field name="name">Sale category</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.category</field>            
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
	</data>
</openerp>