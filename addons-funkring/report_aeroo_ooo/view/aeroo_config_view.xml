<?xml version="1.0" encoding="UTF-8"?>
<openerp>
  <data>
    <record id="form_aeroo_report_settings" model="ir.ui.view">
      <field name="name">report_aeroo_oo.form_aeroo_report_settings</field>
      <field name="model">aeroo.report.config</field>
      <field name="arch" type="xml">
        <form string="Configure Aeroo Reports">
             <header>             
                <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                <button string="Test" type="object" name="test_connection"/>                
                or
                <button string="Cancel" type="object" name="cancel" class="oe_link"/>                
            </header>
            <div>
                <group string="OpenOffice/LibreOffice Proxy">
                    <field name="host" on_change="onchange_connection(host, port)"/>
                    <field name="port" on_change="onchange_connection(host, port)"/>    
                    <field name="test_ok"/>             
                </group>                
            </div>
        </form>
      </field>
    </record>


    <record id="action_aeroo_report_settings" model="ir.actions.act_window">
      <field name="name">Aeroo Report</field>
      <field name="res_model">aeroo.report.config</field>
      <field name="view_mode">form</field>
      <field name="target">inline</field>
    </record>

    <menuitem id="menu_aeroo_report_settings" parent="base.menu_config"
      sequence="91"
      action="action_aeroo_report_settings"/>
      
  </data>
</openerp>
