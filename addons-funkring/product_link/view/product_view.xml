<openerp>
	<data>		
		<record id="form_product" model="ir.ui.view">
            <field name="name">product.form_product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
            	<data>
            		<notebook position="inside">
            			<page string="Linked Products">
            				<field name="linked_product_ids" nolabel="1">
            					<tree string="Products">
	            					<field name="type"/>
	            					<field name="linked_product_id"/>
            					</tree>
            					<form string="Product">
            						<field name="type"/>
            						<field name="linked_product_id"/>
            					</form>
            				</field>
            			</page>
            		</notebook>
            	</data>
            </field>
        </record>
	</data>
</openerp>