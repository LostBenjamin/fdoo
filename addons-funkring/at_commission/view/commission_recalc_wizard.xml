<openerp>
	<data>
		<record id="wizard_commission_recalc" model="ir.ui.view">
			<field name="name">at_commission.recalc_wizard</field>
			<field name="model">at_commission.recalc_wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Recalculate Commissions">
					<separator string="Do you really want to recalculate all commissions? It will take several minutes!" />
					<newline></newline>
					<notebook>
						<page string="Period">
							<group col="4" colspan="4">
								<field name="date_from" colspan="1"/>
								<field name="date_to" colspan="1"/>
							</group>
						</page>
					</notebook>
						
						
					<group col="2" colspan="4">
						<button special="cancel" string="Cancel" icon="gtk-cancel" />
						<button name="do_recalc" string="Recalculate" type="object" icon="gtk-go-forward" />
					</group>
				</form>
			</field>
		</record>

		<record id="action_commission_recalc" model="ir.actions.act_window">
			<field name="name">Recalculate Commissions</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">at_commission.recalc_wizard</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="wizard_commission_recalc" />
			<field name="multi">True</field>
			<field name="target">new</field>
		</record>


		<record id="irconfig_commission_recalc" model="ir.values">
			<field name="model_id" ref="model_at_commission_recalc_wizard" />
			<field name="model">at_commission.recalc_wizard</field>
			<field name="object" eval="1" />
			<field name="name">Recalculate Commissions</field>
			<field name="key2">client_action_multi</field>
			<field name="value" eval="'ir.actions.act_window,' + str(ref('action_commission_recalc'))" />
			<field name="key">action</field>
		</record>
		
		<menuitem id="menu_at_commission_recalc_wizard" name="Recalculate Commission Wizard" parent="account.menu_finance_periodical_processing_billing" sequence="3" action="action_commission_recalc" />
		
	</data>
</openerp>