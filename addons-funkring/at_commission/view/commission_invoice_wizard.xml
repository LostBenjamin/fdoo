<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>		
	
		<record id="wizard_commission_invoice" model="ir.ui.view">
            <field name="name">at_commission.wizard_commission_invoice</field>
            <field name="model">at_commission.commission_invoice_wizard</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Commission Invoice Wizard">
                    <notebook colspan="4">
	                    <page string="Billing Data">
	                       <group col="4" colspan="4">
	                           <field name="name"/>
	                           <separator string="Do you want to show details of work in invoice ?" colspan="4"/>
	                           <field name="related_invoice" />
	                       </group>
                    	</page>
                	</notebook>
	                <separator colspan="4"/>
	                    <group col="2" colspan="4">
			                <button special="cancel"  string="Cancel" icon='gtk-cancel'/>
	                    	<button name="do_create" string="Create Invoices" colspan="1" type="object" icon="terp-gtk-go-back-rtl"/>	   	            
		                </group>
                </form>
            </field>
        </record>
        
        <record id="action_commission_invoice_wizard" model="ir.actions.act_window">
			<field name="name">Invoice Commissions</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">at_commission.commission_invoice_wizard</field>   
			<field name="view_type">form</field>         
			<field name="view_mode">form</field>                                  
			<field name="view_id" ref="wizard_commission_invoice"/>
			<field name="multi">True</field>
			<field name="target">new</field>
		</record>	
        
        
        <record id="irconfig_commission_invoice_wizard" model="ir.values">
		    <field name="model_id" ref="account.model_account_analytic_line" />
		    <field name="model">at_commission.line</field>
		    <field name="object" eval="1" />
		    <field name="name">Invoice Commissions</field>
		    <field name="key2">client_action_multi</field>
		    <field name="value" eval="'ir.actions.act_window,' + str(ref('action_commission_invoice_wizard'))" />
		    <field name="key">action</field>
		</record>
        
      
    </data>
</openerp>
