<openerp>
  <data>
    
    <record id="graph_order_product" model="ir.ui.view">
      <field name="name">at_sale.graph_order_product</field>
      <field name="model">sale.report</field>
      <field name="inherit_id" ref="sale.view_order_product_graph"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
         <field name="price_total" position="after">
            <field name="post_calc" type="measure"/>
         </field>
      </field>
    </record>

    <record id="search_order_product" model="ir.ui.view">
      <field name="name">at_sale.search_order_product</field>
      <field name="model">sale.report</field>
      <field name="inherit_id" ref="sale.view_order_product_search"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
         <data>
             <field name="user_id" position="after">
                <field name="root_analytic_id"/>
                <field name="shop_id"/>
             </field>
             <filter name="Customer" position="after">
                <filter string="Main Analytic Account" name="root_analytic_account" context="{'group_by':'root_analytic_id'}"/>
                <filter string="Shop" name="shop" context="{'group_by':'shop_id'}"/>
             </filter>
        </data>
      </field>
    </record>
    
  </data>
</openerp>

