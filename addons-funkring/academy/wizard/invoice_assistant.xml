<openerp>
    <data>

        <record id="wizard_academy_invoice_assistant" model="ir.ui.view">
            <field name="name">academy.invoice_assistant</field>
            <field name="model">academy.invoice.assistant</field>
            <field name="arch" type="xml">
                <form string="Invoice Assistant" >
                    <group>
                        <group>
                            <field name="semester_id" />
                        </group>
                        <group>
                            <field name="customer_ref" />
                        </group>
                    </group>
                    <field name="registration_ids" nolabel="1" />
                    <footer>
                        <button name="action_offset" string="Offset" type="object" class="oe_highlight" />
                        or
                        <button special="cancel" string="Cancel" class="oe_link" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_invoice_assistant"
                name="Invoice Assistant"
                src_model="academy.registration"
                res_model="academy.invoice.assistant"
                multi="True"
                view_type="form"
                view_mode="form"
                target="new" />

    </data>
</openerp>